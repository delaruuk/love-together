{
    "compilerOptions":{
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "baseUrl": "./src",
        "removeComments": true,
        "incremental": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude":[
        "node_modules"
    ]
}